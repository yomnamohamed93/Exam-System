<div class="container">
    <div class="row">
        <div class="col-sm-8 col-md-6 col-lg-4 push-sm-2 push-md-3 push-lg-4 text-center">
            <br>
            <div>
                <h2>Adminstration Panel</h2>
                <h3>Log in</h3>
            </div>
            <div class="text-left">
                <% if(errorMsg && errorMsg.err) {%>
                    <ul class="alert alert-danger">
                        <% Object.keys(errorMsg.err.invalidAttributes).forEach(function(attribute){ %>
                            <% errorMsg.err.invalidAttributes[attribute].forEach(function(rule){ %>
                                <li>
                                    <%= `${attribute} : ${rule.rule == 'required' ? 'required' : rule.message}` %>
                                </li>
                                <% }); %>
                                    <%});%>
                    </ul>
                    <br>
                    <%}%>
            </div>
            <form action="/admin/login" method="POST" id="admin-form" class="form-signin">
                <input type="text" name="admin" placeholder="user name" class="form-control">
                <input type="password" name="password" placeholder="password" class="form-control">
                <br>
                <input type="submit" class="btn btn-lg btn-primary" value="Login">
            </form>
        </div>
    </div>
</div>