<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8 col-md-6 col-lg-4 push-sm-2 push-md-3 push-lg-4 text-center">
            <br>
            <div>
                <h3>
                    Exam for:
                    <%= course.name %>
                </h3>
                <h4>
                    Number of chapters:
                    <%= course.chapters %>
                </h4>
            </div>
            <div class="text-left">
                <% if(errorMsg && errorMsg.err) {%>
                    <ul class="alert alert-danger">
                        <% Object.keys(errorMsg.err.invalidAttributes).forEach(function(attribute){ %>
                            <% errorMsg.err.invalidAttributes[attribute].forEach(function(rule){ %>
                                <li>
                                    <%= `${attribute} : ${rule.rule == 'required' ? 'required' : rule.message}` %>
                                </li>
                                <% }); %>
                                    <%});%>
                    </ul>
                    <br>
                    <%}%>
            </div>
            <form id="exam-form" action="/exam" method="POST" class="form-signin">
                <input class="form-control" type="number" name="No_chapters" placeholder=" questions per chapter" min="1">
                <h5>Difficulty:</h5>
                <input class="form-control" type="number" name="simple" placeholder=" number of simple questions" min="1">
                <input class="form-control" type="number" name="difficult" placeholder=" number of difficult questions" min="1">
                <h5>Objectives:</h5>
                <input class="form-control" type="number" name="reminding" placeholder=" number of reminding questions" min="1">
                <input class="form-control" type="number" name="understanding" placeholder=" number of understanding questions" min="1">
                <input class="form-control" type="number" name="creativity" placeholder=" number of creativity questions" min="1">

                <input type="hidden" name="course_id" value="<%=course.id%>">
                <br>
                <input type="submit" class="btn btn-lg btn-primary" value="Generate Exam">
            </form>
            <br>
            <a class="btn btn-warning" href="">Back</a>
        </div>
    </div>
</div>