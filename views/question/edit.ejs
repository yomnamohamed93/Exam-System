<div class="container">
    <div class="row">
        <div class="col-sm-8 col-md-6 col-lg-4 push-sm-2 push-md-3 push-lg-4 text-center">
            <br>
            <div>
                <h2>Adminstration Panel</h2>
                <h3>Add New Course</h3>

            </div>
            <div class="text-left">
                <% if(errorMsg && errorMsg.err) {%>
                    <ul class="alert alert-danger">
                        <% Object.keys(errorMsg.err.invalidAttributes).forEach(function(attribute){ %>
                            <% errorMsg.err.invalidAttributes[attribute].forEach(function(rule){ %>
                                <li>
                                    <%= `${attribute} : ${rule.rule == 'required' ? 'required' : rule.message}` %>
                                </li>
                                <% }); %>
                                    <%});%>
                    </ul>
                    <br>
                    <%}%>
            </div>
            <form action="/question/<%= question.id %>" id="course-form" method="POST" class="form-signin">
                <input type="hidden" name="_method" value="PUT">
                <input type="text" name="name" value="<%= question.name %>" class="form-control">
                <input type="text" name="chapters" value="<%= question.chapters %>" class="form-control">
                <br>
                <input type="submit" class="btn btn-lg btn-primary" value="Edit Course">
            </form>
        </div>
    </div>
</div>