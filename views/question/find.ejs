<div class="container">
    <div class="row">
        <div class="col-xs-8 col-sm-8 push-sm-2 push-xs-2 text-center">
            <br>
            <div>
                <h2>Adminstration Panel</h2>
                <h3>List of question</h3>
            </div>
            <table class="table table-striped table-bordered text-center">
                <thead>
                    <tr>
                        <th class="text-center">question Name</th>
                        <th class="text-center">No. of Chapters</th>
                        <th class="text-center" colspan="3">Actions</th>

                    </tr>
                </thead>
                <tbody>
                    <% _.each(questions, function(question) { %>
                        <tr>
                            <td>
                                <%= question.question_head %>
                            </td>
                            <td>
                                <%= question.correct_answer %>
                            </td>
                            <td><a class="btn btn-info" href="/question/<%=question.id%>">Show</a></td>
                            <td><a class="btn btn-success" href="/question/edit/<%=question.id%>">Edit</a></td>
                            <td>
                                <form action="/question/<%=question.id%>" method="POST">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input class="btn btn-danger" type="submit" name="" value="Delete">
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <div class="center">
                <a class="btn btn-success" href="/question/new">New question</a>
            </div>
        </div>
    </div>
</div>