<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4 col-sm-push-4">
            <div class="text-left">
                <% if(errorMsg && errorMsg.err) {%>
                    <ul class="alert alert-danger">
                        <% Object.keys(errorMsg.err.invalidAttributes).forEach(function(attribute){ %>
                            <% errorMsg.err.invalidAttributes[attribute].forEach(function(rule){ %>
                                <li>
                                    <%= `${attribute} : ${rule.rule == 'required' ? 'required' : rule.message}` %>
                                </li>
                                <% }); %>
                                    <%});%>
                    </ul>
                    <br>
                    <%}%>
            </div>
            <form action="/question/create" method="POST" class="form-signin">
                <h2 class="form-signin-heading">Create an Account</h2>
                <input type="text" name="question_head" placeholder="question head" class="form-control">
                <input type="text" name="answers[]" placeholder="first answer" class="form-control">
                <input type="text" name="answers[]" placeholder="second answer" class="form-control">
                <input type="text" name="answers[]" placeholder="third answer" class="form-control">
                <input type="checkbox" name="correct_answer[]" value="1">a</input>
                <input type="checkbox" name="correct_answer[]" value="2">b</input>
                <input type="checkbox" name="correct_answer[]" value="3">c</input>
                <select class="form-control" name="difficulty">
                        <option>Simple</option>
                        <option>Difficult</option>
                        </select>
                <select class="form-control" name="objective">
                        <option>understanding</option>
                        <option>reminding</option>
                        <option>creativity</option>
                        </select>

                <input type="hidden" name="course_id" value="<%=course.id%>">
                <input type="submit" class="btn btn-lg btn-primary btn-block" value="Create Question">
            </form>
        </div>
    </div>
</div>